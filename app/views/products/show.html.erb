<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= humanized_money_with_symbol @product.price %></dd>
        </dl>
      </div>
    </div>
  </article>

  <article class="product-reviews">
    <div class="row">
      <div class="col-sm-12">
        <h2>Reviews</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <table class="table">
          <thead>
            <tr>
              <th class="col-xs-2"></th>
              <th class="col-xs-1">Rating</th>
              <th class="col-xs-6">Feedback</th>
              <th class="col-xs-2">Date Created</th>
              <th class="col-xs-1"></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "review", collection: @reviews %>
          </tbody>
        </table>
      </div>
    </div>
    <% if current_user %>
    <div class="row">
      <div class="col-sm-12">
        <h2>Leave a Review!</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <%= form_for [@product, @review] do |f| %>
          <%= f.text_field :description %>
          <%= f.select :rating, (1..5) %>
          <%= submit_tag 'Submit' %>
        <% end %>
      </div>
    </div>
    <% end %>
  </article>

</section>
