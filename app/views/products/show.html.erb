<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= humanized_money_with_symbol @product.price %></dd>
        </dl>
      </div>
    </div>
  </article>


  <article class="product-reviews">
    <div class="row">
      <div class="col-sm-12">
        <h2>Reviews</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <table class="table">
        <% unless @product.reviews.empty? || !current_user %>
          <thead>
            <tr>
              <th class="col-xs-2"></th>
              <th class="col-xs-1">Rating</th>
              <th class="col-xs-6">Feedback</th>
              <th class="col-xs-2">Date Created</th>
              <th class="col-xs-1"></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "review", collection: @reviews %>
          </tbody>
        <% else %>
          <tbody>
          <% if current_user %>
            <tr>
              <td>Be the first to review this product!</td>
            </tr>
          <% else %>
            <tr>
              <td><%= link_to "Log in", login_path %> or <%= link_to "Register", register_path %> to leave a feedback.</td>
            </tr>
          <% end %>
          </tbody>
        <% end %>
        </table>
      </div>
  </div>

<% if current_user %>
  <div class="row">
    <div class="col-sm-12">
      <h2>Leave a Review!</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= form_for [@product, @review] do |f| %>
        <div class="form-group">
          <%= f.label :feedback %>
          <%= f.text_field :description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "Rating: " %>
          <%= f.select :rating, [5, 4, 3, 2, 1] %>
        </div>
        <%= f.submit 'Submit', class: 'btn btn-primary'  %>
      <% end %>
    </div>
  </div>
<% end %>

  </article>

</section>
