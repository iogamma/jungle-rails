<section class="admin-category-index">

  <header class="page-header">
    <h1>Category &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

<% unless flash.empty? %>
  <div class="alert alert-danger">
    <ul>
      <% flash.keys.each do |k| %>
        <li><%= flash[k] %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="panel panel-default categories">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="col-xs-8">Category Name</th>
          <th class="col-xs-3">Number of Products</th>
          <th class="col-xs-1"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>

  </div>

</section>
